update_customertable = """
UPDATE Unapplied_Contracts
SET 
    legal_name = (SELECT LEGAL_NAME FROM RIPRDA1_CUSTOMER WHERE RIPRDA1_CUSTOMER.CUSTOMER_NBR = Unapplied_Contracts.CUSTOMER_NBR),
    prev_bal_ind = (SELECT PREV_BAL_IND FROM RIPRDA1_CUSTOMER WHERE RIPRDA1_CUSTOMER.CUSTOMER_NBR = Unapplied_Contracts.CUSTOMER_NBR),
    natl_acct_empl = (SELECT NATL_ACCT_EMPL FROM RIPRDA1_CUSTOMER WHERE RIPRDA1_CUSTOMER.CUSTOMER_NBR = Unapplied_Contracts.CUSTOMER_NBR),
    employee_working = (SELECT EMPLOYEE_WORKING FROM RIPRDA1_CUSTOMER WHERE RIPRDA1_CUSTOMER.CUSTOMER_NBR = Unapplied_Contracts.CUSTOMER_NBR),
    major_acct = (SELECT MAJOR_ACCT FROM RIPRDA1_CUSTOMER WHERE RIPRDA1_CUSTOMER.CUSTOMER_NBR = Unapplied_Contracts.CUSTOMER_NBR)
WHERE EXISTS (
    SELECT 1 FROM RIPRDA1_CUSTOMER WHERE RIPRDA1_CUSTOMER.CUSTOMER_NBR = Unapplied_Contracts.CUSTOMER_NBR
);
"""

cursor.execute(update_customertable)
connection.commit()
